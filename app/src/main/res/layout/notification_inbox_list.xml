                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"

                    />

            </LinearLayout>

            <ImageView
