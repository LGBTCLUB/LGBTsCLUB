<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/back_screen"
        />

    <TextView
        android:id="@+id/txt_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Sign Up"
        android:textSize="45sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_sign_up"
        android:text="Please sign up to continue"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_line"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edt_first_name"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:hint="First name"
                android:drawableLeft="@drawable/icon_user"
                android:textColorHint="@color/white"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:hint="Last name"
                android:drawableLeft="@drawable/icon_user"
                android:textColorHint="@color/white"
                android:textColor="#000"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_rec_solid_gray">


                <TextView
                    android:id="@+id/et_doo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/icon_user"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    />

                <Spinner
                    android:id="@+id/gender_category"
                    android:layout_width="290dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_hobbies_interests"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:hint="Hobbies and Interests"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/hobbies"
                android:textSize="14sp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".33"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="22dp"
                    android:padding="8dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/bg_rec_solid_gray"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:entries="@array/array_day"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        app:srcCompat="@drawable/arrow_drop_down"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".33"
                    android:background="@drawable/bg_rec_solid_gray"
                    android:orientation="horizontal"

                    >

                    <Spinner
                        android:id="@+id/sp_month"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:entries="@array/array_month"
                        android:padding="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="10sp"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow_drop_down"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".33"
                    android:background="@drawable/bg_rec_solid_gray"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:entries="@array/array_year"
                        android:padding="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow_drop_down"
                        tools:ignore="VectorDrawableCompat"

                        />
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/li_dob"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:padding="5dp"
                android:background="@drawable/bg_rec_solid_gray">

                <TextView
                    android:id="@+id/et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawablePadding="6dp"
                    android:hint="Date of Birth"
                    android:layout_marginStart="4dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/dob"
                    android:textColorHint="@color/white"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@drawable/ccp_down_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_phone_number"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_phone"
                android:textColorHint="@color/white"
                android:padding="8dp"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:hint="Phone number"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Email "
                android:textColor="#000"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/mail"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rec_solid_gray"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:hint="Password "
                android:textColor="#000"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/icon_lock"
                android:textSize="14sp" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ch_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="45dp"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_termsCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/terms_condition"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_white_colour"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">


                <ImageButton
                    android:id="@+id/img_google"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/google" />

                <ImageButton
                    android:id="@+id/img_facebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/fb" />
            </LinearLayout>
            <TextView

                android:id="@+id/text_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:text="Already have an account? Sign in"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>