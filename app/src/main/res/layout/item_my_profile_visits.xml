<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_civ"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:src="@drawable/logo_final" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/user_profile_civ"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gif_iv"
            android:layout_toEndOf="@+id/user_profile_civ"
            android:gravity="center"
            android:text="#UD12890"
            android:textColor="@color/navy_blue"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gender_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_tv"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/user_profile_civ"
            android:text="Gay"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/user_age_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_category"
            android:layout_toEndOf="@+id/user_profile_civ"
            android:text="26 year | 4.5 ft."
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/visit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_age_height"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/user_profile_civ"
            android:text="23/01/2002,22:10" />

        <TextView
            android:id="@+id/send_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:padding="@dimen/dp_10"
            android:textStyle="bold"
            android:text="Request"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>