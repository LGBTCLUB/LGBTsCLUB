        <androidx.appcompat.widget.Toolbar
            android:elevation="6dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@drawable/bg_toolbar"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_notify"
                    android:src="@drawable/ic_search_black_24dp"

                    />

                <ImageView
                    android:id="@+id/img_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification_new_white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Home"
    android:textStyle="bold"
    android:layout_margin="3dp"
    android:textColor="@color/white"
    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
<!--  </com.google.android.material.appbar.AppBarLayout >-->

    <LinearLayout
        android:id="@+id/linear_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:elevation="6dp"
        android:background="@drawable/bg_bottom_linear"
        android:layout_alignParentBottom="true"
        android:weightSum="4"

        >

        <LinearLayout
            android:id="@+id/linear_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/img_account"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

        </LinearLayout>
    </LinearLayout>


